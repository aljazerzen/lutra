_default:
    just --list

serve:
    mprocs \
        'zola serve' \
        'zensical serve --dev-addr 127.0.0.1:8000'


build:
    rm -rf public
    zola build
    zensical build

publish:
    just build
    rsync --human-readable --progress --recursive --delete \
        public/ lutra-lang.org:/data/http
