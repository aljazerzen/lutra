# === chinook_03
module chinook {
  type Album: {title: text, genre_id: int64}
  type Genre: {id: int64, name: text}

  func get_genres(): [Genre] -> [
    {id = 1, name = "Rock"},
    {id = 2, name = "EDM"},
  ]

  func get_albums(): [Album] -> [
    {title = "Suck It and See", genre_id = 1},
    {title = "Random Access Memories", genre_id = 2},
    {title = "AM", genre_id = 1},
  ]

  func get_albums_by_genre(genre_id: int64): [Album] -> (
    get_albums()
    | std::filter(func (this: Album) -> this.genre_id == genre_id)
  )
}

import chinook as c

func main() -> (
  c::get_genres()
  | std::map(func (this: c::Genre) -> {
    name = this.name,
    albums = (
      c::get_albums_by_genre(this.id)
      | std::map(func (this: c::Album) -> this.title)
    ),
  })
)
# >
[
  {
    name = "Rock",
    albums = [
      "Suck It and See",
      "AM",
    ],
  },
  {
    name = "EDM",
    albums = [
      "Random Access Memories",
    ],
  },
]

# === compounding_interest_00

type State: {time: int32, repayment: float64, dept: float64}

const payments: [{time: int32, amount: float64}] = [
  {3, 10_000.0}, # no fmt
  {5, 10_000.0},
  {7, 10_000.0},
  {9, 11_200.0},
  {13, 10_000.0},
]

func main() -> (
  payments
  | std::reduce(
    {time = 0, repayment = 0.0, dept = 50000.0},
    func (payment: {time: int32, amount: float64}, state: State) -> (
      {
        time = payment.time,
        repayment = payment.amount,
        dept = (
          state.dept
          * std::math::pow(1.0 + 0.05 / 12.0, payment.time - state.time | std::to_float64)
          - payment.amount
        ),
      }
    ),
  )
)
# >
{
  time = 13,
  repayment = 10000.0,
  dept = 373.8299254002286,
}

